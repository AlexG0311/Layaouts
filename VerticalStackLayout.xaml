<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ReplicaWhatsApp.VerticalStackLayout"
             Title="VerticalStackLayout">
    <StackLayout Padding="20" Spacing="30"
                         VerticalOptions="Center" HorizontalOptions="Center">

        <Label Text="Menú Principal VR"
               FontSize="36" FontAttributes="Bold"
               TextColor="White"
               HorizontalOptions="Center" />

        <Button Text="Iniciar Experiencia VR"
                FontSize="24"
                BackgroundColor="Green"
                TextColor="White"
                HeightRequest="60"
                WidthRequest="300"
                HorizontalOptions="Center" />

        <Button Text="Configuración"
                FontSize="24"
                BackgroundColor="Blue"
                TextColor="White"
                HeightRequest="60"
                WidthRequest="300"
                HorizontalOptions="Center" />

        <Button Text="Salir"
                FontSize="24"
                BackgroundColor="Red"
                TextColor="White"
                HeightRequest="60"
                WidthRequest="300"
                HorizontalOptions="Center" />
    </StackLayout>

</ContentPage>