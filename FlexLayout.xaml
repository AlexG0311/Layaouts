<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ReplicaWhatsApp.FlexLayout"
             Title="FlexLayout">
    
    <FlexLayout Direction="Row"        
        AlignItems="Center"
       JustifyContent="SpaceBetween"
       Wrap="Wrap"
       Position="Relative"
       >
        
        <BoxView Color="LightBlue" HeightRequest="100" WidthRequest="100" />
        <BoxView Color="LightBlue" HeightRequest="100" WidthRequest="100" />
        <BoxView Color="LightBlue" HeightRequest="100" WidthRequest="100" />
        <BoxView Color="LightGreen" HeightRequest="100" WidthRequest="100" />
        <BoxView Color="LightCoral" HeightRequest="100" WidthRequest="100" />
        <BoxView Color="Orange" HeightRequest="100" WidthRequest="100" />
        <BoxView Color="Purple" HeightRequest="100" WidthRequest="100" />

    </FlexLayout>
</ContentPage>