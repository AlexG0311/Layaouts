<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ReplicaWhatsApp.HorizontalStackLayout"
             Title="HorizontalStackLayout">
    <VerticalStackLayout Padding="20" Spacing="30"
                         VerticalOptions="Center" HorizontalOptions="Center">

        <!-- Título de la acción -->
        <Label Text="¿Quieres aceptar la solicitud?"
               FontSize="28"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               TextColor="Black" />

        <!-- Botones dispuestos horizontalmente -->
        <HorizontalStackLayout Spacing="15" HorizontalOptions="Center">

            <!-- Botón de Aceptar -->
            <Button Text="Aceptar"
                    BackgroundColor="Green"
                    TextColor="White"
                    FontSize="20"
                    CornerRadius="10"
                    WidthRequest="120" />

            <!-- Botón de Rechazar -->
            <Button Text="Rechazar"
                    BackgroundColor="Red"
                    TextColor="White"
                    FontSize="20"
                    CornerRadius="10"
                    WidthRequest="120" />

        </HorizontalStackLayout>

    </VerticalStackLayout>

</ContentPage>